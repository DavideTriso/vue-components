@import "./../../assets/stylus/mixins/mixins.styl"
@import "./../../assets/stylus/settings/variables.styl"

.Progress // Progress
  display: block
  border-radius: .125rem
  width: 100%
  height: 1.5rem
  background-color: $light_gray
  position: relative
  overflow: hidden
  +variant(primary) // Progress--primary
    background-color: $primary_light
  +variant(success) // Progress--success
    background-color: $success_light
  +variant(danger) // Progress--danger
    background-color: $danger_light
  +variant(warning) // Progress--warning
    background-color: $warning_light
  +variant(info) // Progress--info
    background-color: $info_light
  +variant(dark) // Progress--dark
    background-color: $light_blue_gray
