// Imports
@import "../../../assets/stylus/settings/variables.styl"
@import "../../../assets/stylus/mixins/mixins.styl"

.breadcrumb
  +has('item')
    display: inline-block
    &:after
      color: $dark_gray
      content: '/'
      display: inline-block
      font-family: Roboto, 'sans-serif'
      vertical-align: middle
      margin-left: .25rem
      margin-right: .5rem
    &:last-child:after
      display: none
    +variant('primary')
      color: $primary
    +variant('success')
      color: $success
    +variant('danger')
      color: $danger
    +variant('warning')
      color: $warning
    +variant('info')
      color: $info
    +variant('dark')
      color: $blue_gray
