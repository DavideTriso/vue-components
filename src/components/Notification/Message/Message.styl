@import "./../../../assets/stylus/mixins/mixins.styl"
@import "./../../../assets/stylus/settings/variables.styl"

.Notification
  +has(message) // Notification__message
    display: block
    +variant(primary) // Notification__message--primary
      color: $white
    +variant(success) // Notification__message--success
      color: $white
    +variant(danger) // Notification__message--danger
      color: $white
    +variant(warning) // Notification__message--warning
      color: $white
    +variant(info) // Notification__message--info
      color: $white
    +variant(dark) // notification__message--dark
      color: $white