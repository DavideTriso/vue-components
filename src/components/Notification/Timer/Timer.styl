@import "./../../../assets/stylus/mixins/mixins.styl"
@import "./../../../assets/stylus/settings/variables.styl"

@keyframes timer {
  0% {
    width: 100%
  }
  100% {
    width: 0
  }
}

.Notification
  +has(timer) // notification__timer
    animation: timer 5000ms infinite linear
    position: absolute
    top: 0
    left: 0
    height: .25rem
    +variant(primary) // notification__timer--primary
      background: $primary_dark
    +variant(success) // notification__timer--success
      background: $success_dark
    +variant(danger) // notification__timer--danger
      background: $danger_dark
    +variant(warning) // notification__timer--warning
      background: $warning_dark
    +variant(info) // notification__timer--info
      background: $info_dark
    +variant(dark) // notification__timer--dark
      background: $white