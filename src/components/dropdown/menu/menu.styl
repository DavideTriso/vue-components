@import "./../../../assets/stylus/helpers/spa-imports.styl"

@keyframes fadeInDown {
  from {
    opacity: 0
    transform: translate3d(0, -3.1875rem, 0)
  }

  to {
    opacity: 1
    transform: none
  }
}

@keyframes fadeOutUp {
  from {
    opacity: 1
  }

  to {
    opacity: 0
    transform: translate3d(0, -3.1875rem, 0)
  }
}

.dropdown
  +has('menu')
    background-color: $white
    border-radius: .125rem
    box-shadow: $box_shadow_minimum
    padding: 0
    margin: .5rem 0 0 0
    font-weight: 300
    z-index: 0
    +variant('expand-enter')
      animation: fadeInDown .5s ease
    +variant('expand-leave')
      animation: fadeOutUp .5s ease
