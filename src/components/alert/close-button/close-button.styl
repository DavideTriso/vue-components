@import "./../../../assets/stylus/mixins/mixins.styl"
@import "./../../../assets/stylus/settings/variables.styl"

.alert
  +has('close-button')
    cursor: pointer
    font-size: 1.5rem
    font-weight: 600
    line-height: 2rem
    position: absolute
    right: 1rem
    top: .75rem
    +variant('primary')
      color: $white
    +variant('success')
      color: $white
    +variant('danger')
      color: $white
    +variant('warning')
      color: $white
    +variant('info')
      color: $white
    +variant('dark')
      color: $white
