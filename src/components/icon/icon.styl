// Imports
@import "../../assets/stylus/settings/variables.styl"
@import "../../assets/stylus/mixins/mixins.styl"

.icon
  display: inline-block
  font: normal normal normal 24px / 1 "Material Design Icons"
  font-size: inherit
  font-style: normal
  text-rendering: auto
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  +variant('button')
    padding-left: .5rem


for $num in (1..length($materialDesignIconHexes))
  .icon--{$materialDesignIconNames[$num]}
    &:before
      content: '\' + $materialDesignIconHexes[$num]
