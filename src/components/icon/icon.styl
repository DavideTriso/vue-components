@import "./../../assets/stylus/helpers/spa-imports.styl"

.icon
  display: inline-block
  font: normal normal normal 24px / 1 "Material Design Icons"
  font-size: inherit
  font-style: normal
  text-rendering: auto
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  +variant('button')
    padding-left: .5rem
  +variant('nav-icon')
    color: palette('White')
    font-size: 1.5rem
    padding: .5rem

for $icon in $mdi-icons
  .icon
    +variant($icon)
      &:before
        content: '\' + $mdi-icons[$icon]
