.form
  margin-top: 1rem
  +has(group)
    display: block
    margin-bottom: 1rem
  +has(control)
    display: block
    width: 100%
  +has(label)
    +variant(primary)
      color: #0af
    +variant(success)
      color: #5c5
    +variant(danger)
      color: #cc5656
    +variant(warning)
      color: #cca558
    +variant(info)
      color: #5a93cc